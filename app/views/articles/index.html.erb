<p id="notice"><%= notice %></p>
<%= render 'header' %>
<h1>Listing Articles</h1>

<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr id="<%= dom_id(article) %>">
      <td class="title"><%= article.title %></td>
      <td class="body"><%= article.body %></td>
      <td><%= link_to 'Show', article, remote: true %></td>

      <% if policy(article).update? %>
        <td><%= link_to 'Edit', edit_article_path(article), remote: true %></td>
      <% end %>
      <% if policy(article).destroy? %>
        <td><%= link_to 'Destroy', article, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
 <% if user_signed_in? %>
<%= link_to 'New Article', new_article_path, id: "new_link", remote: true %>
<% end %>

